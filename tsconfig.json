{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["src/routes/*"]
    },
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*"]
}
